package ex03;

public class Continue01 {

	public static void main(String[] args) {
		// 1~10까지 홀수의 합
		
		int num=0;
		for(int i=1; i<=10; i++){

			if(1 % 2 == 1)
				num += i;
		}
		System.out.println("1부터 10까지 홀수의 합 : " + num);
System.out.println("-----------------------------------------");
	
		int sum2=0;
		for(int i=1; i<=10; i+=2) {
			sum2 += 1;
		}
		System.out.println("홀수 합: " + sum2);
		System.out.println("-----------------------------------------");
		
	
	
	
	
	
	
	
	
	
	
	
	
	
	}

}
