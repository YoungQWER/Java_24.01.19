		int num = sc.nextInt();
		
		for(;;) {
			System.out.println("--------------------------");
			System.out.println("1.예금\t|2.출금\t3.잔고\t4.종료");
			System.out.println("--------------------------");
		switch(num) {
		case 1 :
			System.out.println("예금액>>");
			tmp = sc.nextInt();
			bankBalance += tmp;
			break;
			
		}

	}

	}
}
